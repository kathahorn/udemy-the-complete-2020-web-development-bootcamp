<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" id="postTitle" class="form-control">
        <label for="postContent">Text</label>
        <textarea name="postContent" id="postContent" class="form-control" cols="30" rows="10"></textarea>
    </div>
    <button type="submit" name="submitButton" class="btn btn-primary">Publish</button>
</form>

